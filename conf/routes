# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/heroes                 controllers.Heroes.all
POST    /api/heroes                 controllers.Heroes.create
PUT     /api/heroes/:id             controllers.Heroes.update(id:Int)
DELETE  /api/heroes/:id             controllers.Heroes.delete(id:Int)

GET     /api/body/:email            controllers.Users.findByEmail(email:String)
POST    /api/body                   controllers.Users.create

GET     /api/stats                  controllers.Stats.all
GET     /api/stats/:id              controllers.Stats.findById(id:reactivemongo.bson.BSONObjectID)
POST    /api/stats                  controllers.Stats.create
PUT     /api/stats/:id              controllers.Stats.update(id:reactivemongo.bson.BSONObjectID)

GET     /api/*notFound              controllers.Application.notFound(notFound)

# Map 404 to an index bis
GET     /*others                    controllers.Application.other(others)
